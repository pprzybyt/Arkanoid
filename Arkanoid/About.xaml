<Window x:Class="Arkanoid.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Name="window" Title="About" Height="500" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF71DE48" Offset="0.635"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Button x:Name="nextButton" Content="NEXT" HorizontalAlignment="Left" Margin="44,393,0,0" VerticalAlignment="Top" Width="303" Height="49" RenderTransformOrigin="0.57,1.01" FontSize="30" FontFamily="Gill Sans Ultra Bold" FontWeight="Bold" Click="nextButton_Click" />
        <Image x:Name="image" HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="374" Margin="10,10,0,0"/>

    </Grid>
</Window>
